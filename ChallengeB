live_loop :softsnare do
  12.times do
    sample :drum_snare_soft
    sleep 2
  end
  stop
end

live_loop :heavykick do
  16.times do
    sample :drum_heavy_kick
    sleep 1
  end
  stop
end

live_loop :closedcymbal do
  16.times do
    sample :drum_cymbal_closed
    sleep 0.5
  end
  stop
end

live_loop :splashhard do
  sleep 16
  4.times do
    sample :drum_splash_hard
    sleep 1
  end
  stop
end

live_loop :cymbalhard do
  sleep 16
  8.times do
    sample :drum_cymbal_hard
    sleep 0.5
    sample :drum_cymbal_hard
  end
  stop
end

